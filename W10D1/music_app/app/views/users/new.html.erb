<% content_for :h1 do %>User Registration<% end %>
<div style="display: flex; flex-direction: column;">
  <%= render 'shared/errors' %>
  <br>
  <br>
  <form action="<%= users_url %>" method="post" style="display: flex; flex-direction: column; margin-left: 20px;">
    <%= auth_token %>

    <label for="user_email">Email:</label>
    <input
      type="text"
      name="user[email]"
      id="user_email"
      value="<%= @user.email %>"
      style="margin-bottom: 10px;"
      >

    <label for="user_password">Password:</label>
    <input
      type="password"
      name="user[password]"
      id="user_password"
      value="<%= @user.password %>"
      style="margin-bottom: 10px;"
      >
    <br>
    <input type="submit" value="Create User" style="color: #1b1d20; background-color: #7b8187; border-radius: 5px; height: 40px; border: 0px;">
  </form>
</div>

